extends layout

block content
	div(class="container")
		div(class="box")
			div(class="box-inner content")
				div(class="form")
					form(action="/new-password", method="post", class="form-horizontal")
						fieldset
							legend Set a new password
							- if (locals.error.length > 0)
								div(class="alert alert-error")=locals.error
							div(class="control-group")
								label(class="control-label", for="user") Email Address
								div(class="controls")				
									input(type="text", name="user")
							div(class="control-group")
								label(class="control-label", for="password"") New Password
								div(class="controls")				
									input(type="password", name="password")
							div(class="control-group")
								div(class="controls")
									input(type="hidden", name="token", value=locals.token)
									input(type="submit", class="btn btn-custom", value="Change Password")