extends layout

block content
	div(class="container")
		div(class="box")
			div(class="box-inner content")
				div(class="form")
					form(action="/password-reset", method="post", class="form-horizontal")
						fieldset
							legend Request a Password Reset
							- if (locals.error.length > 0)
								div(class="alert alert-error")=locals.error
							div(class="control-group", style="margin-top: 0;")
								label(class="control-label", for="user") Email Address
								div(class="controls")				
									input(type="text", name="user")
							div(class="control-group")
								div(class="controls")
									input(type="submit", class="btn btn-custom", value="Reset Password")